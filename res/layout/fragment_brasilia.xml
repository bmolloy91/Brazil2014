<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_bg" >

   <TextView
	    style="@style/heading2"
	    android:id="@+id/brasHeading"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:gravity="center"
	    android:text="@string/arenaCor" />

   <TextView
       android:id="@+id/brasilia"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/brasHeading"
       android:layout_centerHorizontal="true"
       android:text="@string/bras" />

   <ImageView
       android:id="@+id/estadio"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/brasilia"
       android:layout_centerHorizontal="true"
       android:src="@drawable/manegarrincha" />

</RelativeLayout>
